<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyProfileActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="210dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginStart="120dp"
            android:layout_marginTop="20dp"
            android:textSize="24sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">


        <TextView
            android:id="@+id/track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingBottom="15dp"
            android:text="Track: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/track"
            android:fontFamily="sans-serif"
            android:paddingBottom="15dp"
            android:text="Country: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/country"
            android:fontFamily="sans-serif"
            android:paddingBottom="15dp"
            android:text="Email: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:fontFamily="sans-serif"
            android:paddingBottom="15dp"
            android:text="Phone Number: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/slack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:fontFamily="sans-serif"
            android:paddingBottom="15dp"
            android:text="Slack Username: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/track"
            android:fontFamily="sans-serif"
            android:paddingBottom="15dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTrack"
            android:layout_toEndOf="@+id/country"
            android:fontFamily="sans-serif"
            android:paddingBottom="15dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewCountry"
            android:layout_toEndOf="@+id/email"
            android:fontFamily="sans-serif"
            android:paddingBottom="15dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewEmail"
            android:layout_toEndOf="@+id/phone"
            android:fontFamily="sans-serif"
            android:paddingBottom="15dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewSlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewPhone"
            android:layout_toEndOf="@id/slack"
            android:fontFamily="sans-serif"
            android:paddingBottom="15dp"
            android:textSize="20sp" />
    </RelativeLayout>
</LinearLayout>